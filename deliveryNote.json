{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Delivery Note Schema",
    "type": "object",
    "description": "Delivery note for dispatch. Datetimes use SQL Server format: 'yyyy-MM-dd HH:mm:ss.SSS'.",
    "properties": {
      "deliveryNoteNo": {
        "type": "string",
        "maxLength": 50,
        "description": "Primary delivery note number."
      },
      "transactionDate": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}\\.\\d{3}$",
        "description": "Transaction date and time."
      },
      "noAju": {
        "type": "string",
        "maxLength": 26,
        "description": "Nomor Aju (PPKEK document)."
      },
      "deliverTo": {
        "type": "string",
        "maxLength": 200,
        "description": "Recipient / delivery destination."
      },
      "vehicleId": {
        "type": "string",
        "maxLength": 50,
        "description": "Vehicle ID or plate number."
      },
      "poNo": {
        "type": "string",
        "maxLength": 25,
        "description": "Production Order number (PRO NO)."
      },
      "qty": {
        "type": "number",
        "description": "Quantity in the PRO UnitCode."
      },
      "nw": {
        "type": ["number", "null"],
        "description": "Net weight in KGM (optional)."
      },
      "gw": {
        "type": ["number", "null"],
        "description": "Gross weight in KGM (optional)."
      }
    },
    "required": [
      "deliveryNoteNo",
      "transactionDate",
      "noAju",
      "deliverTo",
      "vehicleId",
      "poNo",
      "qty"
    ],
    "additionalProperties": false,
    "examples": [
      {
        "deliveryNoteNo": "SJ-2025-0915-001",
        "transactionDate": "2025-09-23 10:20:00.000",
        "noAju": "23092025000000123456789012",
        "deliverTo": "PT Logistik Sejahtera, Jakarta",
        "vehicleId": "B 1234 XYZ",
        "poNo": "PO-24-000789",
        "qty": 1200,
        "nw": 580.5,
        "gw": 600.0
      }
    ]
  }
  